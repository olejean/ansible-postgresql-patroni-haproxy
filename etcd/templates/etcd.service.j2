[Unit]
Description=etcd
Documentation=https://github.com/etcd-io/etcd
After=network.target

[Service]
ExecStart=/usr/bin/cluster-etcd/etcd --name {{ ansible_hostname }} \
  --data-dir /usr/bin/etcd/{{ ansible_hostname }} \
  --listen-client-urls http://0.0.0.0:2379 \
  --advertise-client-urls http://{{ ansible_host }}:{{ etcd_client_port }} \
  --listen-peer-urls http://0.0.0.0:2380 \
  --initial-advertise-peer-urls http://{{ ansible_host }}:{{ etcd_peer_port }} \
  --initial-cluster {{ etcd_initial_cluster }} \
  --initial-cluster-token tkn \
  --initial-cluster-state new \
  --enable-v2   

Restart=always
RestartSec=10s
LimitNOFILE=40000

[Install]
WantedBy=multi-user.target

