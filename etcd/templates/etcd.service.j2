[Unit]
Description=etcd
Documentation=https://github.com/etcd-io/etcd
After=network.target

[Service]
ExecStart=/tmp/cluster-etcd/etcd --name {{ etcd_name }} \
  --data-dir /tmp/etcd/{{ etcd_name }} \
  --listen-client-urls http://{{ ansible_host }}:{{ etcd_client_port }} \
  --advertise-client-urls http://{{ ansible_host }}:{{ etcd_client_port }} \
  --listen-peer-urls http://{{ ansible_host }}:{{ etcd_peer_port }} \
  --initial-advertise-peer-urls http://{{ ansible_host }}:{{ etcd_peer_port }} \
  --initial-cluster {{ etcd_initial_cluster }} \
  --initial-cluster-token tkn \
  --initial-cluster-state new
Restart=always
RestartSec=10s
LimitNOFILE=40000

[Install]
WantedBy=multi-user.target

